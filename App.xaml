<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:NewsApplication"
             x:Class="NewsApplication.App">
    <Application.Resources>
        <Color x:Key="GreenColor">#00776e</Color>
        <Color x:Key="GrayColor">#f7fafa</Color>
        <Style TargetType="NavigationPage">
            <Setter Property="BarBackgroundColor" Value="{StaticResource GreenColor}" />
            <Setter Property="BarTextColor" Value="White" />
                <Setter Property="IconColor" Value="White" />
        </Style>
    </Application.Resources>
</Application>
