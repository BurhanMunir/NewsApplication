<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewsApplication.Views.LandingPage"
             NavigationPage.HasNavigationBar="False" BackgroundColor="Black" Padding="25,0,10,0">
    <VerticalStackLayout BackgroundColor="White" VerticalOptions="Center">
        <ContentView BackgroundColor="White" HeightRequest="250" Padding="10,30,0,10">
            <VerticalStackLayout Spacing="10">
            <Label Text="Welcome to &#10;Community News" TextColor="Black" FontSize="14"/>
            <Label Text="The convenient way to collect with the local community and get latest news and events"/>
                <Button Text="Sign In" BackgroundColor="Black" TextColor="White" Margin="10,20,10,0" Command="{Binding SignInCommand}"/>
            </VerticalStackLayout>
        </ContentView>
    </VerticalStackLayout>
</ContentPage>